generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

datasource db {
  provider             = "mysql"
  url                  = env("DATABASE_URL")
  referentialIntegrity = "prisma"
}

model Event {
  id           Int      @id @default(autoincrement())
  event_name   String
  event_day    DateTime
  event_store  Int
  event_format Int      @default(0)
  stores       Store    @relation(fields: [event_store], references: [id])
  formats      Format   @relation(fields: [event_format], references: [id])
  member_list  MemberList[]
  created_at   DateTime @default(now()) @db.DateTime(0)
  updated_at   DateTime @default(now()) @db.DateTime(0)
  delete_flag  Int      @default(0)
}

model Member {
  id          Int      @id @default(autoincrement())
  name        String
  email       String
  pass        String
  auth_uid    String   @default("xxx")
  event_list  MemberList[]
  created_at  DateTime @default(now()) @db.DateTime(0)
  updated_at  DateTime @default(now()) @db.DateTime(0)
  delete_flag Int      @default(0)
}

model MemberList {
  id          Int      @id @default(autoincrement())
  event_id    Int
  event       Event    @relation(fields: [event_id], references: [id])
  member_id   Int
  member      Member   @relation(fields: [member_id], references: [id])
  created_at  DateTime @default(now()) @db.DateTime(0)
  updated_at  DateTime @default(now()) @db.DateTime(0)
  delete_flag Int      @default(0)
}

model SnsInfo {
  id          Int      @id @default(autoincrement())
  member_id   Int
  sns_link    String
  created_at  DateTime @default(now()) @db.DateTime(0)
  updated_at  DateTime @default(now()) @db.DateTime(0)
  delete_flag Int      @default(0)
}

model Store {
  id          Int      @id @default(autoincrement())
  store_name  String
  prefecture  String
  address     String
  events      Event[]
  created_at  DateTime @default(now()) @db.DateTime(0)
  updated_at  DateTime @default(now()) @db.DateTime(0)
  delete_flag Int      @default(0)
}

model Format {
  id                  Int      @id @default(autoincrement())
  format_name         String
  english_format_name String   @default("Standard")
  events              Event[]
  created_at          DateTime @default(now()) @db.DateTime(0)
  updated_at          DateTime @default(now()) @db.DateTime(0)
  delete_flag         Int      @default(0)
}
